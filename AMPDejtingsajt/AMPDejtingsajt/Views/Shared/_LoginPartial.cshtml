@{ 
    string message = ViewBag.FriendMessage;
}

@if (Session["PersonID"] == null)
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(AMPDejtingsajt.Internationalization.Resource.Register, "Register", "Account", new { area = "" }, new { @class = "nav navbar-nav" })</li>
        <li>@Html.ActionLink(AMPDejtingsajt.Internationalization.Resource.LogIn, "Login", "Account", new { area = "" }, new { @class = "nav navbar-nav" })</li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-left">
        <li>@Html.ActionLink(AMPDejtingsajt.Internationalization.Resource.ProfilePage, "User", "ProfilePage", new { id = (Session["PersonID"]) }, new { @class = "nav navbar-nav" })</li>
        <li>@Html.ActionLink(AMPDejtingsajt.Internationalization.Resource.Friends, "User", "Friends", new { id = (Session["PersonID"]) }, new { @class = "nav navbar-nav" })</li>
    </ul>
    <form class="navbar-form navbar-left">
        <div class="form-group">
            <input class="form-control" id="searchInput" placeholder="Search for potential partners..">
        </div>
        <button type="submit" class="btn btn-default">Search</button>
    </form>

    <ul class="nav navbar-nav navbar-right">
        @if (message == "New friendrequest")
        {
        <li id"hide">@Html.ActionLink(message, "User", "Friends", new { id = (Session["PersonID"]) }, new { @class = "nav navbar-nav" })</li>
        }
        <li>@Html.ActionLink(AMPDejtingsajt.Internationalization.Resource.UpdateProfile, "Edit", "ProfilePage", new { id = (Session["PersonID"]) }, new { @class = "nav navbar-nav" })</li>
        <li>@Html.ActionLink(AMPDejtingsajt.Internationalization.Resource.Logout, "LogOut", "Account", new { area = "" }, new { @class = "nav navbar-nav" })</li>
    </ul>
}

